									"type": "group",
									"header": "Spirits",
									"dock": "left",
									"margin": "0,0,3,0",
									"content": {
										"type": "layout",
										"h_alignment": "center",
										"v_alignment": "center",
										"key": "spirits"
									}
								},
								{
									"type": "group",
									"header": "Light Realm Keys",
